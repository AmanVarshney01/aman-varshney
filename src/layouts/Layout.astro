---
import '@fontsource/geist-sans'
import '@fontsource/geist-mono'
import { ClientRouter } from 'astro:transitions'
import Header from '../components/Header.astro'
import '../styles/global.css'

type Props = {
	title: string
	description?: string
	author?: string
}

const {
	title,
	description = 'From India. Junior Developer Advocate at Prisma. Creator of Better T Stack with 10k+ project scaffolds per month. Open source, TypeScript, and AI.',
	author = 'Aman Varshney'
} = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const socialImageURL = new URL('/og-image.webp', Astro.url)
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="alternate icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content={author} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL.href} />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:image" content={socialImageURL.href} />
		<meta property="twitter:title" content="Aman Varshney" />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:image" content={socialImageURL.href} />
		<meta property="twitter:creator" content="@amanvarshney01" />
		<meta property="og:site_name" content="Aman Varshney" />
		<meta property="og:description" content={description} />
		<ClientRouter fallback={'none'} />
	</head>
	<body class="min-h-screen">
		<div class="site-shell">
			<Header />
			<main class="stack-lg">
				<slot />
			</main>
		</div>
	</body>
</html>
