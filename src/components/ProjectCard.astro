---
import { Image } from 'astro:assets';

type props = {
  name: string;
  description?: string;
  image?: string;
  link?: string;
};

const { name, description, image, link } = Astro.props;
---

<a class="border border-neutral-900 hover:border-neutral-600 transition duration-200 no-underline" href={link} target="_blank">
  <Image class=" aspect-square object-contain" src={image} alt={description} width={400} height={400} quality={'low'} />
  <div class="p-3 flex flex-col justify-center gap-2">
    <h3>{name}</h3>
    <p class=" text-sm">{description}</p>
  </div>
</a>
