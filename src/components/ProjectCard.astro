---
import { Image } from "astro:assets";

type Props = {
  name: string;
  description: string;
  image: any;
  githubLink: string;
  liveLink?: string;
};

const { name, description, image, githubLink, liveLink } = Astro.props;
---

<div
  class="hover:outline outline-1 no-underline rounded-sm flex flex-col justify-center"
>
  <Image
    class="p-1 m-0 aspect-video object-contain"
    src={image}
    alt={description}
    width={400}
    height={400}
    quality={"low"}
    loading="eager"
  />
  <div class="flex flex-col justify-center p-2 h-full">
    <h4 class="m-0">{name}</h4>
    <p class="m-0 text-sm not-prose">{description}</p>
  </div>
  <div class="p-2 gap-2 flex flex-row">
    <a href={githubLink} target="_blank" rel="noopener noreferrer">Github</a>
    {
      liveLink && (
        <a href={liveLink} target="_blank" rel="noopener noreferrer">
          Live
        </a>
      )
    }
  </div>
</div>
