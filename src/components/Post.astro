---
import { type CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
---

<a class="flex flex-row justify-between sm:text-base text-sm gap-4" href=`blog/${post.slug}`>
  <p>{post.data.title}</p>
  <p class=" min-w-fit">{post.data.date}</p>
</a>
