---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header class="flex flex-row gap-8 mb-8 pt-20">
  <!-- <h1>Header</h1> -->
  <a class=`${currentPath == '' ? 'underline' : 'no-underline'}` href="/"
    >Home</a
  >
  <a
    class=`${currentPath == 'about' ? 'underline' : 'no-underline'}`
    href="/about">About</a
  >
  <a
    class=`${currentPath == 'blog' ? 'underline' : 'no-underline'}`
    href="/blog">Blog</a
  >
</header>
