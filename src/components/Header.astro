---
import NavButton from './NavButton.astro'

const currentPath = Astro.url.pathname
---

<header class="flex flex-row items-center justify-between gap-2 bg-base-100 py-8">
	<div class="flex flex-row gap-4 md:gap-6">
		<NavButton href="/" name="Home" isActive={currentPath == '/'} />
		<NavButton href="/projects" name="Projects" isActive={currentPath.startsWith('/projects')} />
		<NavButton href="/blog" name="Blog" isActive={currentPath.startsWith('/blog')} />
		<NavButton href="/guestbook" name="Guestbook" isActive={currentPath.startsWith('/guestbook')} />
	</div>
</header>
