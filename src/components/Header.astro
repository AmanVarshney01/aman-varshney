---
import NavButton from './NavButton.astro'

const currentPath = Astro.url.pathname
---

<div class="py-8">
	<div class="flex flex-row items-center justify-between">
		<div class="flex flex-row gap-8">
			<NavButton href="/" name="Home" isActive={currentPath == '/'} />
			<NavButton href="/blog" name="Blog" isActive={currentPath.startsWith('/blog')} />
			<NavButton
				href="/guestbook"
				name="Guestbook"
				isActive={currentPath.startsWith('/guestbook')}
			/>
		</div>
	</div>
</div>
