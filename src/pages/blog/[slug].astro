---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { getRelativeDate } from "../../components/getRelativeData";
export const getStaticPaths = async () => {
  const posts = await getCollection("posts");
  const paths = posts.map((post) => {
    return {
      params: { slug: post.slug },
      props: { post },
    };
  });
  return paths;
};

// export const prerender = true;
type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <div class="mb-8 flex flex-col gap-2">
    <h2 class="text-2xl font-bold">{post.data.title}</h2>
    <p>
      {post.data.date.toString().slice(0, 10)} ({
        getRelativeDate(post.data.date.toString())
      })
    </p>
  </div>
  <div
    class="prose prose-strong:text-neutral-950 prose-headings:text-neutral-900 text-neutral-800
    dark:prose-strong:text-neutral-100
    dark:prose-headings:text-neutral-100 dark:text-neutral-400 dark:prose-a:text-[#91f2da]
    dark:hover:prose-a:text-[#91f2da] dark:hover:prose-a:decoration-[#91f2da]"
  >
    <Content />
  </div>
</Layout>
