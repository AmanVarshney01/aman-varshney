---
import { getCollection, type CollectionEntry } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import { getRelativeDate } from "../../components/getRelativeData";
export const getStaticPaths = async () => {
  const posts = await getCollection("posts");
  const paths = posts.map((post) => {
    return {
      params: { slug: post.slug },
      props: { post },
    };
  });
  return paths;
};

// export const prerender = true;
type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title}>
  <div class="mb-8 flex flex-col gap-2">
    <h2 class="text-2xl font-bold">{post.data.title}</h2>
      <p>{post.data.date.toString().slice(0,10)} ({getRelativeDate(post.data.date.toString())})</p>
    </div>
  <div
    class="prose prose-strong:text-neutral-100 prose-headings:text-neutral-100 text-neutral-400"
  >
    <Content />
  </div>
</Layout>
